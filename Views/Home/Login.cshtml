@{
    ViewData["Title"] = "Login";
}
@model LoginUser
<h1>Login</h1>
<a href="/">Need to register?</a>
<hr>
<form asp-action="Login" asp-controller="Home" method="post" class="logreg">
     <div class="form-group">
        <span asp-validation-for="EmailAttempt"></span>
        <label asp-for="EmailAttempt">Email: </label>
        <input class="form-control" asp-for="EmailAttempt">
    </div>

    <div class="form-group">
        <span asp-validation-for="PasswordAttempt"></span>
        <label asp-for="PasswordAttempt">Password: </label>
        <input class="form-control" asp-for="PasswordAttempt">
    </div>

    <button type="submit">Submit</button>
</form>